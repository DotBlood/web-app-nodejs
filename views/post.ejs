<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>webmed.ru | Новость: <%- post.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/post.css">
    <link rel="stylesheet" href="/css/banner.css">
</head>

<body class="bg-red">

    <%- include('./partials/nav/navbar-posts.ejs') %>

    <div class="bg">
        <div class="container">
            <div class="bg-inner">
                <%- include('./partials/banner-post.ejs') %>


                <main class="main pb-5">
                    <div class="main-inner">
                        <div class="container">

                            <div class="post border"> 
                            
                                <div class="post-title border-bottom mb-3">
                                    <div class="mt-2">
                                        <h5 class="data pb-3">Дата дабовление: <%- post.createdAt.toLocaleDateString() %> </h5>
                                    </div>
                                </div>
                                
                                <div class="post-img">
                                    <img class="img-fluid img-thumbnail rounded mx-auto d-block" src="<%- post.img || 'https://dummyimage.com/750x400/ababad/000.png' %> " alt="">
                                </div>
                                
                                <div class="post-ofform p-3 mt-3 border-top">
                                <div class="post-description border-bottom mb-2">
                                    <p class="description"><b>Описание:</b><br><%- post.description %></p>
                                </div>

                                <div class="post-author">
                                    <p class="author"><b>Автор:</b><br>
                                    <%- post.author %></p>
                                </div>

                                <div class="stat border-bottom">
                                    <div class="star"></div>
                                    <div class="like"></div>
                                    <div class="dislike"></div>
                                    <div class="how-cmments"></div>
                                </div> 
                                </div>
                            </div> 
                                                
                            <%- include('./partials/footer.ejs') %>
                            
                        </div>
                    </div>
                </main>


            </div>
        </div>
    </div>

    <script crc="js/check_input.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>